{{outlet}}

{{#if isSolving}}
  <div class="questionSlider">
     {{#each test.questions as |question|}}
      <div class="box">
        <div class="form-group">{{question.text}}</div>
        {{#each question.question_options as |option|}}
          <div class="form-check">
            {{input type="checkbox" class="form-check-input" checked=option.is_correct }}
            {{option.answer_text}}
          </div>
        {{/each}}
      </div>
    {{/each}}
  </div>
  <div class="container">
    <button {{action "calculateTest"}} class="btn btn-default pull-right">Zakończ test</button>
  </div>
{{else}}
  <div class="container">
    Twój wynik to: {{points}} / {{test.questions.length}}
  </div>
{{/if}}
