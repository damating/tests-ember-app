<div class="container">
  <div>Hello from Group!</div>

  {{#if formIsActive}}
    <div class="row">
      <form {{action "createTest" newTest on="submit"}}>
        <div class="form-group">
          <label for="name">Nazwa</label>
          {{input type="text" id="testName" class="form-control" placeholder="Nazwa" value=newTest.name}}
        </div>
        <div class="form-group">
          <label for="description">Opis</label>
          {{textarea class="form-control" id="testDescription" rows="3" value=newTest.description}}
        </div>
        <button type="submit" class="btn btn-success pull-right">Utwórz test</button>
      </form>
    </div>
  {{else}}
    <button {{action "showForm" test}} class="btn btn-success pull-right">Dodaj test</button>
  {{/if}}

  {{#each tests as |test|}}
    <div>
      {{test.name}}
      <button {{action "deleteTest" test}} class="btn btn-danger">Usuń</button>
      {{ log test }}
    </div>
  {{/each}}
</div>

