<div class="container">
  {{#if formIsActive}}
    <div class="row">
      <form {{action "createTest" newTest on="submit"}}>
        <div class="row form-group">
          <div class="form-group col-md-6">
            <label for="name">Nazwa</label>
            {{input type="text" id="testName" class="form-control" placeholder="Nazwa" value=newTest.name}}
          </div>
          <div class="form-group col-md-6">
            <label for="duration_in_secs">Czar trwania w minutach</label>
            {{input type="text" id="testDuration" class="form-control" placeholder="Czas trwania" value=newTest.duration_in_secs}}
          </div>
        </div>
        <div class="form-group">
          <label for="description">Opis</label>
          {{textarea class="form-control" id="testDescription" rows="3" value=newTest.description}}
        </div>
        <div class="row form-group">
          <div class="form-group col-md-6">
            <label for="start_date">Data i czas rozpoczęcia</label>
            {{input type="datetime-local" id="testStartDate" class="form-control" value=newTest.start_date}}
          </div>
          <div class="form-group col-md-6">
            <label for="end_date">Data i czas zakończenia</label>
            {{input type="datetime-local" id="testEndDate" class="form-control" value=newTest.end_date}}
          </div>
        </div>

        {{#each newTest.questions_attributes as |question|}}
          {{question-view test=newTest question=question}}
        {{/each}}
        <button {{action "addQuestion"}} class="btn btn-success">Dodaj pytanie</button>

        <button type="submit" class="btn btn-success pull-right">Utwórz test</button>
      </form>
    </div>
  {{else}}
    <button {{action "showForm" test}} class="btn btn-success pull-right">Dodaj test</button>
  {{/if}}

  {{#each tests as |test|}}
    <div>
      {{test.name}}
      <button {{action "deleteTest" test}} class="btn btn-danger">Usuń</button>
      {{ log test }}
    </div>
  {{/each}}
</div>

