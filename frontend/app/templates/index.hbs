  <div id="entry-header" class="row new-question">
  <div class="background-image"></div>
  <div class="container">
  <div class="container-sm">
  <h3 class="entry-title">Dodaj nową grupę</h3>
    <form {{action "createGroup" newGroup on="submit"}}>
      <div class="form-group">
        {{input type="text" id="groupName" placeholder="Nazwa" class="form-control" value=newGroup.name}}
      </div>
      <div class="form-group">
        {{textarea class="form-control" placeholder="Opis" id="groupDescription" rows="3" value=newGroup.description}}
      </div>
      <button type="submit" class="btn btn-secondary btn-lg pull-right create-group-btn">Utwórz grupę</button>
    </form>
    </div>
  </div>
</div>

<div id="main" class="container">
<div class="row">
  {{#each groups as |group index|}}
    <div class="col-md-4 m-b-lg">
        <div class="panel panel-default panel-profile m-b-0">
          <div class="panel-heading" style="background-image: url(assets/bg-{{index}}.jpg);"></div>
          <div class="panel-body text-center">
            {{group-view group=group groups=groups}}
          </div>
        </div>
      </div>
  {{/each}}
</div>
</div>
